@{
    ViewData["Title"] = "Contato";
}
<div class="container-sm p-lg-5 mt-4  custom-bg border border-danger ">
<div class="container ">
        <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                
                <h2 class="mb-5 text-center text-white">Fale Conosco</h2>
                
                <div class="card shadow-lg border-0 bg-dark text-white">
                    <div class="card-body p-4 p-md-5">
                        
                        <div class="row">
                            
                            <div class="col-lg-7 mb-4 mb-lg-0 border-end border-secondary">
                                <h4 class="mb-4 text-primary">Envie sua Mensagem</h4>
                                
                                <form action="mailto:ogabriel292@gmail.com?subject=Mensagem de Contato" method="post" enctype="text/plain">
                                    
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div class="mb-3">
                                            <label for="inputNomeContato" class="form-label">Nome Completo</label>
                                            <input type="text" value="@ViewBag.Nome" class="form-control" id="inputNomeContato" name="Nome" required>
                                        </div>
                                    
                                        <div class="mb-3">
                                            <label for="inputEmailContato" class="form-label">E-mail</label>
                                            <input type="email" value="@ViewBag.Email" class="form-control" id="inputEmailContato" name="Email" required>
                                        </div>
                                    }
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <div class="mb-3">
                                            <label for="inputNomeContato" class="form-label">Nome Completo</label>
                                            <input type="text" class="form-control" id="inputNomeContato" name="Nome" required>
                                        </div>
                                    
                                        <div class="mb-3">
                                            <label for="inputEmailContato" class="form-label">E-mail</label>
                                            <input type="email" class="form-control" id="inputEmailContato" name="Email" required>
                                        </div>
                                    }
                                    
                                    
                                    <div class="mb-4">
                                        <label for="textareaMensagem" class="form-label">Mensagem</label>
                                        <textarea class="form-control" id="textareaMensagem" name="Mensagem" rows="4" required></textarea>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">Enviar Mensagem</button>
                                    </div>
                                </form>
                            </div>
                            
                            <div class="col-lg-5 ps-lg-5">
                                <h4 class="mb-4 text-primary">Nossos Contatos</h4>
                                
                                <div class="mb-4">
                                    <p class="h6 text-light mb-1">Telefone</p>
                                    <p class="lead fw-bold">(11) 98765-4321</p>
                                </div>
                                
                                <div class="mb-4">
                                    <p class="h6 text-light mb-1">E-mail</p>
                                    <p class="lead fw-bold">contato@swingmotors.com.br</p>
                                </div>
                                
                                <div class="mb-4">
                                    <p class="h6 text-light mb-1">Endereço</p>
                                    <p class="lead fw-bold">Av. do Carro Esportivo, 1234<br>Bairro Luxo - São Paulo, SP<br>CEP: 01000-000</p>
                                </div>
                                
                                <hr class="my-4 border-secondary">

                                <h6 class="text-white mb-3">Horário de Atendimento</h6>
                                <p class="small">Segunda a Sexta: 09:00 às 18:00</p>
                                <p class="small">Sábados: 09:00 às 13:00</p>

                            </div>
                            
                        </div>
                        
                    </div>
                </div>
                
                <div class="card shadow-lg mt-4 border-0">
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14631.545063065094!2d-46.6669911!3d-23.5501865!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce58434a9b6c09%3A0xf639a04a572c3d55!2sRua%20da%20Consola%C3%A7%C3%A3o%2C%20247%20-%20Consola%C3%A7%C3%A3o%2C%20S%C3%A3o%20Paulo%20-%20SP%2C%2001301-000!5e0!3m2!1spt-BR!2sbr!4v1678897123456!5m2!1spt-BR!2sbr" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</div>